<h1>Add Workout </h1>

<%= form_for(@event) do |f| %>

  <div class="field">
    <%= f.label :Workout%><br>
    <%= f.text_field :event_name %>
  </div>
  <div class="field">
    <%= f.label :Description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :Date %>
    <%= f.text_field :date %><br>
    
    <%= f.label :Time %>
    <%= f.text_field :time %><br>
   
    <%= f.label :Address %>
    <%= f.text_field :address %><br>
    
    <%= f.label :Location %>
    <%= f.text_field :location %><br>
    
    <%= f.label :Difficulty %>
    <%= f.text_field :difficulty %><br>
  
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>