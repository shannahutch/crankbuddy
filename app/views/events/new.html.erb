<!-- this page iterates through and creates events via the form -->
<div class="wrapper">

  <h2 id="sign_in">Add Workout </h2>
  <div id= "sign_in_box">
    <%= form_for(@event) do |f| %>

      <div class="field">
        <%= f.label :Workout%><br>
        <%= f.text_field :event_name %>
      </div>
      <div class="field">
        <%= f.label :Description %><br>
        <%= f.text_area :description %>
      </div>
      <div class="field">
        <%= f.label :Date %>
        <%= f.text_field :date %>
        
        <%= f.label :Time %>
        <%= f.text_field :time %>
       
        <%= f.label :Address %>
        <%= f.text_field :address %>
        
        <%= f.label :Location %>
        <%= f.text_field :location %><br>
        
        <%= f.label :Difficulty %>
        <%= f.text_field :difficulty %><br>
      
      </div>
      <div class="actions">
        <%= f.submit "Create Workout", class: 'button_big'%>
      </div>
    <% end %>
  </div>
</div>